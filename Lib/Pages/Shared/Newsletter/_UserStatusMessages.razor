@inject DisplayHelper DH
@inject IOptions<SiteSettings> SiteSettings
@using Core.Models.Options
@using Microsoft.Extensions.Options

@if (User.IsAlmostInactive)
{
    <div style="background-color:antiquewhite;padding:1rem;margin-block:1rem;">
        <span>Your account may soon be automatically deactivated. Please click <a target="_blank" href="@DH.UserActiveLink(User)">here</a> to continue receiving health insights.</span>
    </div>
}

@if (User.IsNewlyCreated)
{
    <div style="background-color:antiquewhite;padding:1rem;margin-block:1rem;">
        <span>Click on the &#127760; to manage a task and its options. This message will disappear soon.</span>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public Core.Dtos.User.UserNewsletterDto User { get; set; } = null!;
}
