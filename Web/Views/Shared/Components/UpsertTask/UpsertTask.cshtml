@model Web.Views.Shared.Components.UpsertTask.UpsertTaskViewModel
@using Core.Models.User
@using Web.Code.Extensions

<div class="alert alert-light shadow mb-3" role="alert">
    <form id="recipe-form" asp-controller="@UserController.Name" asp-action="@nameof(UserController.UpsertTask)" asp-route-email="@Model.User.Email" asp-route-token="@Model.Token" method="post">
        <input asp-for="Task.Id" type="hidden" class="form-control" />

        <div class="form-group mb-3">
            <label asp-for="Task.Name" class="control-label">Name</label>
            <input asp-for="Task.Name" type="text" class="form-control" required="required" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Task.Notes" class="control-label">Notes</label>
            <input asp-for="Task.Notes" type="text" class="form-control" />
        </div>

        <div class="form-group form-check mb-3">
            <label asp-for="Task.Enabled" class="control-label">@Html.DisplayNameFor(_ => Model.Task.Enabled)</label>
            <input class="form-check-input" asp-for="Task.Enabled" aria-describedby="disabled-help" />
            <span asp-validation-for="Task.Enabled" class="text-danger"></span>
            <div id="disabled-help" class="form-text">
                @Html.DisplayDescriptionFor(_ => Model.Task.Enabled)
                @if (!String.IsNullOrWhiteSpace(Model.Task.DisabledReason))
                {
                    <div><b>Disabled Reason</b> - @Model.Task.DisabledReason</div>
                }
            </div>
        </div>
    </form>

    <div class="row form-group justify-content-end gy-2">
        <div class="col">
            <input type="submit" value="Save" class="btn btn-secondary" form="recipe-form" />
        </div>
        @if (Model.Task.Id != default)
        {
            <div class="col-auto">
                <form id="delete-form" asp-controller="@UserController.Name" asp-action="@nameof(UserController.RemoveRecipe)" asp-route-email="@Model.User.Email" asp-route-token="@Model.Token" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="RecipeId" asp-for="@Model.Task.Id" />

                    <input type="submit" value="Delete" class="btn btn-outline-danger" form="delete-form" />
                </form>
            </div>
        }
    </div>
</div>
