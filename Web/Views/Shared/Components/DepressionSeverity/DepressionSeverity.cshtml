                    <div style="display:flex;column-gap:1ex;">
                        <input id="@(Html.IdFor(_ => Model.UserMood.NoInterest))" type="hidden" asp-for="UserMood.NoInterest" style="width:6ch;height:fit-content;" class="allow-demo"
