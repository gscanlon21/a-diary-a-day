@model DepressionSeverityViewModel
@using Core.Models.Exercise
@using Data.Entities.User
@using Lib.Pages.Shared.Exercise


@{
    bool show = Model.PreviousMood == null || Model.PreviousMood.Date < Core.Dates.Today.AddDays(-7);
}

<h5>APA DSM-5 TR Severity Measure for Depression—Adult*</h5>
<h6 class="mb-1">*Adapted from the Patient Health Questionnaire–9 (PHQ-9)</h6>
<div class="alert alert-light shadow">
    @if (!show) 
    {
        await Html.RenderPartialAsync("_ScoreChart", new Web.ViewModels.Shared.ScoreChartViewModel()
        {
            Scores = Model.Xys,
            User = Model.User,
            Token = Model.Token,
            Type = Components.DepressionSeverity
        });
    }
    else
    {
        <details>
            <summary>
                @{
                    await Html.RenderPartialAsync("_ScoreChart", new Web.ViewModels.Shared.ScoreChartViewModel()
                    {
                        Scores = Model.Xys,
                        User = Model.User,
                        Token = Model.Token,
                        Type = Components.DepressionSeverity
                    });
                }
