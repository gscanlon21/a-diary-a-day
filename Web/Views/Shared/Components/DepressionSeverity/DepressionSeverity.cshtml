                                   min="-1" max="3" step="1" value="@(Model.UserMood.NoInterest ?? -1)"
                                   oninput="@(Html.IdFor(_ => Model.UserMood.NoInterest)).value = this.valueAsNumber < 0 ? '' : this.valueAsNumber" />

